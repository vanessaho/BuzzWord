<?xml version="1.0" encoding="UTF-8"?>
<!--
    This XML file allows us to easily customize the look and language used
    in our program's user interface. Note that this properties file is only
    for the standard controls for an app from the SimpleAppFramework, so
    it would not include things initialized for the workspace, which is
    customizable.
-->
<properties>
    <property_list>
        <property name="APP_WINDOW_WIDTH" value="800"/>
        <property name="APP_WINDOW_HEIGHT" value="550"/>
        <property name="APP_TITLE" value="BuzzWord"/>
        <property name="APP_LOGO" value="buzz.png"/>
        <property name="APP_PIC"    value="bee.png"/>
        <property name="APP_PATH_CSS" value="css"/>
        <property name="APP_CSS" value="buzzword_style.css"/>
        <property name="APP_SAVED_GAMES_PATH" value="profiles"/>

        <!-- WORKSPACE CSS PROPERTIES -->
        <property name="ROOT_BORDERPANE_ID" value="background"/>
        <property name="LEFT_TOOLBAR_ID" value="toolbar"/>
        <property name="SEGMENTED_BUTTON_BAR" value="buttonbar"/>
        <property name="FIRST_TOOLBAR_BUTTON" value="first-toolbar-button"/>
        <property name="LAST_TOOLBAR_BUTTON" value="last-toolbar-button"/>
        <property name="HEADING_LABEL" value="heading-label"/>
        <property name="BUTTON" value="button"/>

        <!-- PROGRAM ICON FILES -->
        <property name="LOGIN_ICON" value="login.png"/>
        <property name="CREATE_PROFILE_ICON" value="createprofile.png"/>
        <property name="HELP_ICON" value="info2.png"/>
        <property name="PLAY_ICON" value="play.png"/>
        <property name="PAUSE_ICON" value="pause.png"/>
        <property name="RESUME_ICON" value="continue.png"/>
        <property name="REPLAY_ICON" value="replay.png"/>
        <property name="SAVE_ICON" value="save.png"/>
        <property name="DICTIONARY_ICON" value="dictionary1.png"/>
        <property name="ANIMAL_ICON" value="dove.png"/>
        <property name="NAME_ICON" value="name.png"/>

        <!-- TOOLTIPS FOR BUTTONS -->
        <property name="LOGIN_TOOLTIP" value="Login with a username and password"/>
        <property name="CREATE_PROFILE_TOOLTIP" value="Create a new profile"/>
        <property name="HELP_TOOLTIP" value="Get information on this game"/>
        <property name="PLAY_TOOLTIP" value="Start or continue the game/Next Level"/>
        <property name="PAUSE_TOOLTIP" value="Pause the game"/>
        <property name="RESUME_TOOLTIP" value="Resume the game"/>
        <property name="REPLAY_TOOLTIP" value="Replay this level"/>
        <property name="SAVE_TOOLTIP" value="Save the game"/>


        <!-- BUTTON WORDS -->
        <property name="LOGIN_WORDS_ICON" value="LOGIN"/>
        <property name="CREATE_PROFILE_WORDS_ICON" value="CREATE NEW PROFILE"/>
        <property name="HELP_WORDS_ICON" value="HELP"/>
        <!-- ERROR MESSAGES -->
        <property name="CLOSE_BUTTON_TEXT" value="Close"/>
        <property name="CREATE_PROFILE_ERROR_TITLE" value="Username is already taken."/>
        <property name="CREATE_PROFILE_ERROR_MESSAGE" value="Try with another username/password."/>
        <property name="LOGIN_ERROR_TITLE" value="Login Error"/>
        <property name="LOGIN_ERROR_MESSAGE" value="An error occurred with loading login information. This application will now exit."/>
        <property name="SAVE_ERROR_TITLE" value="Save Error"/>
        <property name="SAVE_ERROR_MESSAGE" value="An error occurred saving game"/>
        <property name="PROPERTIES_LOAD_ERROR_TITLE" value="Property Load Error"/>
        <property name="PROPERTIES_LOAD_ERROR_MESSAGE" value="An error occurred loading a property file."/>
        <property name="LOAD_IMAGE_ERROR_TITLE" value="Load Image Error"/>
        <property name="LOAD_IMAGE_ERROR_MESSAGE" value="An error occurred loading an image."/>
        <property name="INITIALIZATION_ERROR_TITLE" value="Initialization failed."/>
        <property name="INITIALIZATION_ERROR_MESSAGE" value="Initialization of toolbar has failed."/>

        <!-- VERIFICATION MESSAGES -->
        <property name="NEW_PROFILE_MESSAGE" value="New Profile Created"/>
        <property name="NEW_PROFILE_TITLE" value="New Profile"/>
        <property name="LOAD_COMPLETED_MESSAGE" value="Profile Loaded"/>
        <property name="LOAD_COMPLETED_TITLE" value="Loading Completed"/>
        <property name="SAVE_COMPLETED_MESSAGE" value="Game Saved"/>
        <property name="SAVE_COMPLETED_TITLE" value="Saving Completed"/>
        <property name="SAVE_UNSAVED_WORK_MESSAGE" value="Your progress will be cleared if you leave. Will you still like to exit mid-level?"/>
        <property name="SAVE_UNSAVED_WORK_TITLE" value="Exit the Game"/>

        <!-- REGULAR MESSAGES -->
        <property name="PERSONAL_BEST_MESSAGE" value="You have achieved a new personal best with this mode!"/>
        <property name="PERSONAL_BEST_TITLE" value="Congratulations!"/>

        <property name="WORK_FILE_EXT" value="json"/>
        <property name="WORK_FILE_EXT_DESC" value="Game File"/>
        <property name="SAVE_WORK_TITLE" value="Save"/>
        <property name="LOAD_WORK_TITLE" value="Select file to load"/>
    </property_list>
    <property_options_list/>
</properties>